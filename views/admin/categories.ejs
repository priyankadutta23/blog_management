<%- include('../../layouts/admin/header')%>
<%- include('../../layouts/admin/side')%>
<%- include('../../layouts/admin/nav')%>


            <!-- Begin Page Content -->
            <div class="container-fluid">

                <!-- Page Heading -->
                <h1 class="h3 mb-2 text-gray-800">Category Management</h1>
               
                <% if(success.length) {%>
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <strong>Hey</strong>
                        <%= success%>
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                    </div>
                    <% } else if(error.length) {%>
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <strong>Hey</strong>
                            <%= error%>
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                        </div>
                        <% } %>

                            <!-- DataTales Example -->
                            <div class="card shadow mb-4">
                                <div class="card-header py-3">
                                    <h1 class="m-0 font-weight-bold text-primary" style="font-size: 25px; font-family: 'Times New Roman', Times, serif;">Category List
                                        <span>
                                            <a href="/admin/categories/add-category" class="btn btn-primary" style="margin-left: 770px;">ADD Category</a>

                                        </span></h1>
                                </div>
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                            <thead>
                                                <tr>
                                                    <th scope="col">CATEGORY NAME</th>
                                                    <th scope="col">STATUS</th>
                                                    <th scope="col">ACTION</th>
                                                </tr>
                                            </thead>
                                            <tfoot>
                                                <tr>
                                                    <th scope="col">CATEGORY NAME</th>
                                                    <th scope="col">STATUS</th>
                                                    <th scope="col">ACTION</th>
                                                </tr>
                                            </tfoot>
                                            <tbody>
                                                <% all_category.map((data)=> { %>

                                                    <tr>
                                                        <td>
                                                            <%= data.category_name%>
                                                        </td>
                                            
                                            <!-- status -->
                                            <% if(data.status === 'Active') {%>
                                                            <td><a href="/admin/categories/status-category/<%= data._id %>"
                                                                    class="btn btn-success">Active</a></td>
                                                            <% } else {%>
                                                                <td><a href="/admin/categories/status-category/<%= data._id %>"
                                                                        class="btn btn-warning">Inactive</a></td>
                                                                <% } %>

                                                                    <!-- edit delete -->
                                                                    <td>
                                                                        <div class="dropdown">

                                                                            <a type="button" id="dropdownMenuButton"
                                                                                data-toggle="dropdown"><span
                                                                                    class="bi bi-three-dots-vertical"></span></a>

                                                                            <div class="dropdown-menu"
                                                                                aria-labelledby="dropdownMenuButton">

                                                                                <a class="dropdown-item"
                                                                                    href="/admin/categories/edit-category/<%= data._id %>">Edit</a>
                                                                                <a class="dropdown-item"
                                                                                    href="/admin/categories/delete-category/<%= data._id %>">Delete</a>
                                                                                <!-- <a class="dropdown-item"
                                                                                    href="/admin/categories/view-category/<%= data._id %>">View</a> -->
                                                                            </div>
                                                                        </div>

                                                                    </td>
                                                                    <!-- <td><a href="/faq/edit-faq/<%= data._id %>" class="fas fa-info-circle btn-lg"></a></td> -->
                                                                    <!-- <td><a href="/faq/delete-faq/<%= data._id %>" class="btn-circle fas fa-trash btn-danger"></a></td> -->


                                                    </tr>
                                                    <%})%>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>

            </div>
            <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            <%- include('../../layouts/admin/footer')%>
